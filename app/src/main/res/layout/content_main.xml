<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/noteText"
            app:layout_constraintTop_toBottomOf="@+id/noteTitle"
            app:layout_constraintEnd_toEndOf="@+id/listCourses" app:layout_constraintStart_toStartOf="@+id/listCourses"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp" android:hint="@string/note_text"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/listCourses" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/noteTitle"
            app:layout_constraintTop_toBottomOf="@+id/listCourses" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/listCourses" app:layout_constraintStart_toStartOf="@+id/listCourses"
            android:hint="@string/note_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>